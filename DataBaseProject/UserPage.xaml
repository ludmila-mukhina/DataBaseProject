<Page x:Class="DataBaseProject.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBaseProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage" FontSize="20">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Image Name="UserPhotoImage" Width="100" Height="100" VerticalAlignment="Top" Margin="10" Source="Resources\NoPhoto.png"/>
                <Button Click="Button_Click_1">Изменить фото</Button>
            </StackPanel>
            <StackPanel Margin="10">
                <GroupBox Header="Имя пользователя">
                    <TextBlock Name="TBUserName"></TextBlock>
                </GroupBox>
                <GroupBox Header="Фамилия пользователя">
                    <TextBlock Name="TBUserSurname"></TextBlock>
                </GroupBox>
                <Button Margin="0,10,0,0" Click="Button_Click">Редактировать профиль</Button>
                <Button Margin="0,10,0,0">Изменить логин и пароль</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
